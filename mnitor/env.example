# ============================================
# Configuración del Monitor
# ============================================

# Base de Datos del Gestor de Pedidos (MongoDB - para monitoreo)
# ⚠️ CAMBIAR: IP de la instancia EC2 donde está MongoDB
GESTOR_MONGO_URI=mongodb://172.31.XX.XX:27017
GESTOR_MONGO_DB=provesi_wms

# Si MongoDB tiene autenticación:
# GESTOR_MONGO_URI=mongodb://usuario:password@172.31.XX.XX:27017/provesi_wms?authSource=admin

# Base de Datos de Logs (LOGSEGURIDAD - MySQL en AWS RDS)
# ⚠️ CAMBIAR: Endpoint de AWS RDS (formato: nombre-instancia.xxxxx.us-east-1.rds.amazonaws.com)
LOG_DB_HOST=nombre-instancia.xxxxx.us-east-1.rds.amazonaws.com
LOG_DB_PORT=3306
LOG_DB_USER=admin
LOG_DB_PASSWORD=tu_password_rds_aqui
LOG_DB_NAME=LOGSEGURIDAD

# API del Gestor de Pedidos
# ⚠️ CAMBIAR: IP de la instancia EC2 donde está el GestorPedidos
GESTOR_API_URL=http://172.31.XX.XX:5000

# Configuración del Monitor
MONITOR_PORT=5001
MONITOR_INTERVAL=30

# Configuración de Seguridad
SECRET_KEY=change-this-secret-key-in-production

