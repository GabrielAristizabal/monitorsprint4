# ============================================
# Configuración del Orquestador
# ============================================

# Puerto del orquestador
ORCHESTRATOR_PORT=8080

# URLs de fallback de los microservicios (si no hay service discovery)
# ⚠️ CAMBIAR: IPs de las instancias EC2 donde están los microservicios
GESTOR_PEDIDOS_URL=http://172.31.XX.XX:5000
RUTA_OPTIMA_URL=http://172.31.XX.XX:8000

# Configuración de Service Registry
REGISTRY_PORT=8081
SERVICE_TTL=30

# Timeouts (en segundos)
REQUEST_TIMEOUT=0.5

# ============================================
# Ejemplo con IPs reales:
# ============================================
# ORCHESTRATOR_PORT=8080
# GESTOR_PEDIDOS_URL=http://172.31.15.10:5000
# RUTA_OPTIMA_URL=http://172.31.15.11:8000
# REGISTRY_PORT=8081
# SERVICE_TTL=30
# REQUEST_TIMEOUT=0.5

