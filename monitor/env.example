# Configuración de Base de Datos del Gestor de Pedidos (MongoDB - para monitoreo)
# CAMBIAR: URI de conexión a MongoDB del gestor de pedidos
GESTOR_MONGO_URI=mongodb://localhost:27017
GESTOR_MONGO_DB=provesi_wms

# Configuración de Base de Datos de Logs (LOGSEGURIDAD - MySQL)
# CAMBIAR: IP de la instancia donde está la BD de logs (puede ser la misma o diferente)
LOG_DB_HOST=localhost
LOG_DB_PORT=3306
LOG_DB_USER=root
LOG_DB_PASSWORD=tu_password_aqui
LOG_DB_NAME=LOGSEGURIDAD

# Configuración de API del Gestor
# CAMBIAR: URL de la API del gestor de pedidos
GESTOR_API_URL=http://localhost:5000

# Configuración del Monitor
MONITOR_PORT=5001
MONITOR_INTERVAL=30

# Configuración de Seguridad
SECRET_KEY=change-this-secret-key-in-production

